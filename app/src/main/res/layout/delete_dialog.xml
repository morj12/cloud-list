<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:paddingBottom="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Do you want to delete this cart?" />

    <Button
        android:id="@+id/bt_dialog_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/dialog_no"
        android:backgroundTint="@color/light_gray"
        app:layout_constraintEnd_toStartOf="@+id/bt_dialog_yes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_text" />

    <Button
        android:id="@+id/bt_dialog_yes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/dialog_yes"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/red"
        app:layout_constraintStart_toEndOf="@+id/bt_dialog_no"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_text" />
</androidx.constraintlayout.widget.ConstraintLayout>